# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=0.0.0.0

# Doma API Configuration
DOMA_API_BASE_URL=https://api-testnet.doma.xyz
DOMA_API_KEY=your_doma_api_key_here
DOMA_SUBGRAPH_URL=https://api-testnet.doma.xyz/graphql

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/domadao
DB_HOST=localhost
DB_PORT=5432
DB_NAME=domadao
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Poll API Configuration
POLL_API_ENABLED=true
POLL_INTERVAL_MS=5000
POLL_BATCH_SIZE=100
POLL_EVENT_TYPES=NAME_TOKEN_MINTED,NAME_TOKEN_TRANSFERRED,NAME_TOKEN_RENEWED

# Event Indexer
INDEXER_ENABLED=true
INDEXER_BATCH_SIZE=50
INDEXER_RETRY_ATTEMPTS=3
INDEXER_RETRY_DELAY_MS=1000

# Blockchain Configuration
DOMA_CHAIN_ID=eip155:97476
DOMA_RPC_URL=https://rpc-testnet.doma.xyz
DOMA_EXPLORER_URL=https://explorer-testnet.doma.xyz

# Contract Addresses (from contracts-workspace/deployment-addresses.json)
POOL_FACTORY_ADDRESS=
FRACTION_POOL_ADDRESS=
REVENUE_DISTRIBUTOR_ADDRESS=
BUYOUT_HANDLER_ADDRESS=
MOCK_USDC_ADDRESS=

# Orderbook Configuration
ORDERBOOK_TYPE=DOMA
SUPPORTED_CURRENCIES=USDC,ETH

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT_MS=30000
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_PRETTY_PRINT=true

# Monitoring (optional)
SENTRY_DSN=
METRICS_ENABLED=false
